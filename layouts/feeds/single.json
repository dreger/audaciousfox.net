{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ .Site.Title }}",
    "home_page_url": "{{ .Site.BaseURL }}",
    "feed_url": "{{ .Permalink }}",
    "icon" : "{{ .Site.BaseURL }}/apple-touch-icon.png",
    "favicon" : "{{ .Site.BaseURL }}/favicon.png",
    "author" : {
      "url" : "{{ .Site.Author.url }}",
      "name" : "{{ .Site.Author.name }}"
   	},
    "items": [
    {{ range $i, $element := first 25 (where $.Site.Pages "Type" "in" "archivelinked") }}
        {{ if $i }}, {{ end }}
            {
            	{{ if eq .Section "linked" }} 
                "title": "{{ .Title }}",
                "external_url": "{{ .Params.link }}",
                {{ else }}
                "title": "{{ $.Param "icon" | markdownify  }} {{ .Title }}",
                {{ end }} 
    			"url": "{{ .Permalink }}",
                "date_published": "{{ .Date }}",
                "id": "{{ .Permalink }}",
                "author": {
                	"name" : "{{ .Site.Author.name }}"
                },
                "content_html": {{ .Content | jsonify }}
            }
        {{ end }}
    ]
}
