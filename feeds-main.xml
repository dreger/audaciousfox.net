---
layout: null
permalink: /feeds/main.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feeds/main.xml" rel="self" type="application/rss+xml"/>
    {% for post in site.posts limit:11 %}
    <item>
        <title>{% unless post.link %}{{ site.icon }} {% endunless %}{{ post.title | xml_escape }}</title>
        {% if post.link %}
        <link>{{ post.link }}</link>
        {% else %}
        <link>{{ post.url | prepend: site.url }}</link>
        {% endif %}
        <guid isPermaLink="false">{{ post.url }}</guid>
      <dc:creator><![CDATA[K.Q. Dreger]]></dc:creator>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>
        {% if post.link %}          
        <![CDATA[
        {{ post.content }}
        <a href="{{ post.url | prepend: site.url }}">{{ site.icon }}</a>
        ]]>
        {% else %}
        <![CDATA[
        {{ post.content }}
        ]]>
        {% endif %}
      </description>
    </item>
    {% endfor %}
  </channel>
</rss>
